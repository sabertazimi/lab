Screen {
    layout: vertical;
}

RichLog {
    height: 1fr;
    scrollbar-gutter: stable;
    scrollbar-size: 1 1;
    scrollbar-visibility: hidden;
}

RichLog.hidden {
    display: none;
}

#thinking {
    background: $surface;
}

StatusBar {
    padding: 1;
    background: $surface;
    color: #d97767;
}

Input {
    padding: 0 1;
    border: hkey $primary;
}
